<UserControl x:Class="ClassDependencyTracker.Views.DependencyViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassDependencyTracker.Views" xmlns:viewmodels="clr-namespace:ClassDependencyTracker.ViewModels" xmlns:models="clr-namespace:ClassDependencyTracker.Models" xmlns:classes="clr-namespace:ClassDependencyTracker.Utils.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:DependencyViewerVM/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <classes:BindingProxy x:Key="deleteCommand" Data="{Binding DeleteClassCommand}"/>
    </UserControl.Resources>

    <!--MainGrid-->
    <Grid x:Name="mainDependencyViewerGrid">
        <ListView x:Name="levelsList" ItemsSource="{Binding LevelsView}" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:DependencyLevel}">

                    <!--#region Dependency Level-->
                    <Expander x:Name="levelExpanderContainer" Header="{Binding Label}" Background="{Binding Background}">
                        <ListView Grid.Row="0" ItemsSource="{Binding Classes}" d:ItemsSource="{d:SampleData ItemCount=2}" Background="Transparent" BorderBrush="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:ClassModel}">
                                    <local:ClassControl DataContext="{Binding}" HorizontalAlignment="Stretch"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Expander>
                    <!--#endregion Dependency Level-->
                    
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
