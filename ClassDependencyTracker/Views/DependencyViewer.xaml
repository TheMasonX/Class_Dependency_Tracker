<UserControl x:Class="ClassDependencyTracker.Views.DependencyViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassDependencyTracker.Views" xmlns:viewmodels="clr-namespace:ClassDependencyTracker.ViewModels" xmlns:models="clr-namespace:ClassDependencyTracker.Models" xmlns:classes="clr-namespace:ClassDependencyTracker.Utils.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <viewmodels:DependencyViewerVM/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <classes:BindingProxy x:Key="deleteCommand" Data="{Binding DeleteClassCommand}"/>
    </UserControl.Resources>

    <!--MainGrid-->
    <Grid>
        <ListView ItemsSource="{Binding DependencyLevels}">
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type models:DependencyLevel}">
                    <!--ListView Container-->
                    <Border Visibility="{Binding Visible, Converter={StaticResource boolToVis}}" d:Visibility="Visible">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Expander Header="{Binding Label}">
                                <ListView Grid.Row="1" ItemsSource="{Binding Classes}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:ClassModel}">
                                            <local:ClassControl DataContext="{Binding}" HorizontalAlignment="Stretch" DeleteCommand="{Binding Data, Source={StaticResource deleteCommand}}"/>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </Expander>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
