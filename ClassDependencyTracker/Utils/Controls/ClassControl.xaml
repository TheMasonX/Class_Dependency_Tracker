<UserControl x:Class="ClassDependencyTracker.Views.ClassControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClassDependencyTracker.Views"
             xmlns:models="clr-namespace:ClassDependencyTracker.Models" xmlns:classes="clr-namespace:ClassDependencyTracker.Utils.Classes"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <d:UserControl.DataContext>
        <models:ClassModel/>
    </d:UserControl.DataContext>
    <Border Background="WhiteSmoke" HorizontalAlignment="Stretch">
        <Grid Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

             <!--Name-->
            <Label Grid.Row="0" Grid.Column="0" Content="_Name:"/>
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding Name}"/>
                <Button Grid.Column="1" Content="{StaticResource X}" ToolTip="Delete this class" Style="{StaticResource singleCharButton}" Command="{Binding DeleteCommand}"/>
            </Grid>

            <!--URL-->
            <Label Grid.Row="1" Grid.Column="0" Content="_URL:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding URL}"/>

            <!--Prereqs-->
            <Label Grid.Row="2" Grid.Column="0" Content="_Prereqs:"/>
            <Grid Grid.Row="2" Grid.Column="1" Name="prereqs">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" x:Name="prereqsHeader" Background="WhiteSmoke">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1" Content="{StaticResource +}" ToolTip="Add a prerequesite" Command="{Binding AddRequirementCommand}" IsEnabled="{Binding CanAdd}" Style="{StaticResource singleCharButton}"/>
                </Grid>

                <!-- Class List -->
                <ListView Grid.Row="1" ItemsSource="{Binding Requirements}" d:ItemsSource="{d:SampleData ItemCount=2}">
                    <ListView.Resources>
                        <classes:BindingProxy x:Key="otherClasses" Data="{Binding AllOtherClasses}"/>
                        <classes:BindingProxy x:Key="deleteClassCommand" Data="{Binding DeleteRequirementCommand}"/>
                    </ListView.Resources>
                    <ListView.ItemTemplate>
                        <DataTemplate DataType="models:DependencyModel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox ItemsSource="{Binding NonSourceClasses}" SelectedItem="{Binding RequiredClass}" DisplayMemberPath="Name" d:ItemsSource="{d:SampleData ItemCount=2}" d:SelectedIndex="0"/>
                                <Button x:Name="removePrereq" Grid.Column="1" Content="{StaticResource X}" Command="{Binding Data, Source={StaticResource deleteClassCommand}}" CommandParameter="{Binding}" Style="{StaticResource singleCharButton}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </Border>
</UserControl>
